{
    "compilerOptions": {
        "resolveJsonModule": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "outDir": "dist",
        "declaration": false,
        "baseUrl": "./",
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "paths": {
            "@types": [ "./source/types.ts" ],
        },
    },
}
